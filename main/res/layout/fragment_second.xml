<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.bliss.csc.buspublicopenapi.MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/btn_reset"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:onClick="resetCurrentBus"
                android:text="Reset"
                android:textColor="#fff"
                android:textSize="10pt"
                android:background="@drawable/buttonshape"
                android:layout_margin="3dp"
                />
            <Button
                android:id="@+id/btn_plus"
                android:layout_width="49dp"
                android:layout_height="wrap_content"
                android:onClick="plusBusNumber"
                android:text="+1"
                android:textSize="8pt"
                android:textColor="#fff"
                android:background="@drawable/buttonshapeblue"
                android:layout_margin="2dp"
                />
            <Button
                android:id="@+id/btn_minus"
                android:layout_width="49dp"
                android:layout_height="wrap_content"
                android:onClick="minusBusNumber"
                android:text="-1"
                android:textSize="8pt"
                android:textColor="#fff"
                android:background="@drawable/buttonshapeblue"
                android:layout_margin="2dp"
                />
            <Button
                android:id="@+id/btn_pluss"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:onClick="plusBaek"
                android:text="+100"
                android:textSize="8pt"
                android:textColor="#fff"
                android:background="@drawable/buttonshapeblue"
                android:layout_margin="2dp"
                />
            <Button
                android:id="@+id/btn_minuss"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:onClick="minusBaek"
                android:text="-100"
                android:textSize="8pt"
                android:textColor="#fff"
                android:background="@drawable/buttonshapeblue"
                android:layout_margin="2dp"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/bus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15pt"
            />
        <TextView
            android:id="@+id/data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</ScrollView>